---
import '@fontsource/oswald'
import '@fontsource/open-sans'
import Header from '../components/header.astro'

const { title: pageTitle } = Astro.props

const title = pageTitle
  ? pageTitle + ' | Helston Flora Day'
  : 'Helston Flora Day | The Official Site'
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
  </head>
  <body class="text-lg font-medium text-neutral-700">
    <Header />
    <main class="bg-[url('/bg.png')]">
      <slot name="title">
        <div
          class="border-b border-neutral-800 bg-primary py-14 text-center font-display text-6xl text-secondary"
        >
          {pageTitle}
        </div>
      </slot>

      <div class="container py-12">
        <slot />
      </div>
    </main>

    <footer class="bg-primary py-8">
      <div class="container text-center font-bold text-white">
        Copyright Helston Flora Day Association
      </div>
    </footer>
  </body>
</html>
