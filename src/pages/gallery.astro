---
import type { ImageMetadata } from 'astro'
import { Image } from 'astro:assets'
import Layout from '../components/layout.astro'

interface Props {
  imagePath: string
  altText: string
  name: string
  age: number
}

const images = import.meta.glob<{ default: ImageMetadata }>(
  '/src/images/gallery/*.{jpeg,jpg,png,gif}',
)
---

<Layout title="Gallery">
  <div class="sm:columns-2 md:columns-3 lg:columns-4">
    {
      Object.values(images).map((image) => (
        <Image
          alt=""
          quality={50}
          src={image()}
          class="mb-4 w-full rounded border border-transparent transition-all duration-300 ease-in-out hover:scale-105 hover:cursor-pointer hover:border-primary hover:shadow-lg"
          loading="lazy"
        />
      ))
    }
  </div>
</Layout>
